<html lang="en">
<%- include("./header.ejs") %>
<style>
    body {
    font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS", sans-serif;
  }
   .header {
    display: flex;
    justify-content: space-between;
    position: sticky;
    top: 0;
    background-color: white;
    z-index: 1000;
  }
  
  .logoimage {
    width: 250px;
    padding: 0% 20%;
  }
  
  .login_register {
    display: flex;
    padding: 2.5% 6%;
  }
  .headerlink {
    display: flex;
    padding: 2.5% 2%;
  }
  #headerlinkname {
    padding: 0% 18%;
    font-size: 120%;
  }
  #boxheader {
    padding: 0% 8%;
    font-size: 120%;
  }
  .linkheader:hover {
    color: #0037ff;
  }
  .linkheader {
    text-decoration: none;
    color: black;
  }
  #registrationhead {
    background-color: #4f97ff;
    color: white;
    padding: 3px 35px;
    border-radius: 9.6px;
    font-size: 120%;
  }
  #registrationhead:hover {
    background-color: #416afe;
    transform: scale(1.2);
  }
  .bgimage {
    background-image: url(../public/Image/iitgimage.jpg);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .lowopacity{
      background-color: white;
      text-align: center;
      opacity: 0.85;
      padding: 50px;
      border-radius: 30px;
  }
  .headerheading{
      font-size: 150%;
      color: #0a1d60;
  }
</style>
<body>
    <div class="header">
        <div class="icon"><img src="../public/Image/LogoName.png" class="logoimage"></div>
        <div class="headerlink">
            <div class="homeheader" id="headerlinkname"><a href="getstarted" class="linkheader">Home</a></div>
            <div class="aboutusheader" id="headerlinkname"><a href="about" class="linkheader">About</a></div>
            <div class="contactheader" id="headerlinkname"><a href="" class="linkheader">Contact</a></div>
        </div>
        <div class="login_register">
            <div class="login_header" id="boxheader"><a href="" class="linkheader">Login</a></div>
            <div class="register_header" id="boxheader"><a href="" class="linkheader" style="color: white;" id="registrationhead">Register</a></div>
        </div>
    </div>
    <div class="bgimage">
        <div class="lowopacity">
            <div class="headerheading"><h1>Join the Campus Collaborate<br>Community</h1></div>
            <div style="font-size: 128%; color: #416afe;">Connect, collaborate, and create with fellow students</div>
            <br><br>
            <div class="getstarted"><a href="" class="linkheader" style="color: white;" id="registrationhead" style="font-size: 145%; background-color: #0037fe;">Get Started</a></div>
        </div>
    </div>
    <%- include("./footer.ejs") %>
</body>
</html>